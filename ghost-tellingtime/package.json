{
  "name": "telling-time-ghost",
  "description": "A Ghost theme for Telling Time - watch blog and reviews",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Telling Time"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme",
    "watches",
    "blog"
  ],
  "config": {
    "posts_per_page": 12,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 400
      },
      "m": {
        "width": 750
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    },
    "card_assets": true,
    "custom": {
      "navigation_layout": {
        "type": "select",
        "options": ["Logo left, menu right", "Logo center"],
        "default": "Logo left, menu right"
      },
      "show_featured_post": {
        "type": "boolean",
        "default": true,
        "description": "Show large featured post on homepage"
      },
      "grid_columns": {
        "type": "select",
        "options": ["2", "3", "4"],
        "default": "3",
        "description": "Number of columns for post grid"
      }
    }
  }
}
